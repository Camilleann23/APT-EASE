<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f4f4f4">

    <!-- Title or header -->
    <TextView
        android:id="@+id/editProfileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:gravity="center" />

    <!-- User Name Edit Text -->
    <EditText
        android:id="@+id/editUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- User Email Edit Text -->
    <EditText
        android:id="@+id/editUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- User Phone Edit Text -->
    <EditText
        android:id="@+id/editUserPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- User Room Number Edit Text -->
    <EditText
        android:id="@+id/UserRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room Number"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Lease Start Date Edit Text -->
    <EditText
        android:id="@+id/LeaseStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lease Start Date"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Lease End Date Edit Text -->
    <EditText
        android:id="@+id/LeaseEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lease End Date"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="32dp" />

    <!-- Save Profile Button -->
    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
