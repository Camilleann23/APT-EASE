<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Custom Status Bar -->
        <RelativeLayout
            android:id="@+id/customStatusBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#000000"
            android:padding="5dp">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:27"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp" />

            <LinearLayout
                android:id="@+id/statusIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/signalIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_signal"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/wifiIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_wifi"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/batteryIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_battery"
                    android:layout_marginEnd="16dp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Page Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meet the Developers"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <!-- Team Vision -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚀 Our Vision: Innovating for a Smarter Tomorrow!"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Developer 1: Camille (Project Manager) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/kam"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camille Ann Pepito"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Manager | Hustler"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📌 Manages team workflow and ensures smooth project execution."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Developer 2: Kricel (System Analyst) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/kricel"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kricel Alvarado"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Analyst | UI/UX Designer"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎨 Designs intuitive and user-friendly interfaces."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Developer 3: Fritz (Tech Writer) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/fritz"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fritz Dolly Lorejas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tech Writer | Software Tester"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📝 Ensures documentation is clear and bug-free."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Developer 4: Aurelio (Hacker) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/aurelio"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aurelio Jr. Ramos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full-Stack Developer"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💻 Builds and optimizes app features."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>
        <!-- Bottom Navigation Bar -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#EEEEEE"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="45dp"
            android:weightSum="4">

            <Button
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Home"
                android:background="?android:attr/selectableItemBackground" />

            <Button
                android:id="@+id/nav_settings"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Settings"
                android:background="?android:attr/selectableItemBackground" />

            <Button
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Profile"
                android:background="?android:attr/selectableItemBackground" />

            <Button
                android:id="@+id/nav_developers"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Developers"
                android:background="?android:attr/selectableItemBackground" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>